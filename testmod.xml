<?xml version="1.0" encoding="UTF-8"?>
<shipmod name="testmod" version="1.0">
    <spriteTemplates>
        <spriteTemplate name="bigstar">
            <images>
                <image>bigstar-1.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="smallstar">
            <images>
                <image>smallstar-1.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="blue_player">
            <images>
                <image>blue_player-1.png</image>
                <image>blue_player-2.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="plasma">
            <images>
                <image>plasma-1.png</image>
                <image>plasma-2.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="plasma_dead">
            <images>
                <image>plasma_dead-1.png</image>
                <image>plasma_dead-2.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="grey_enemy">
            <images>
                <image>grey_enemy-1.png</image>
                <image>grey_enemy-2.png</image>
            </images>
        </spriteTemplate>
        <spriteTemplate name="explosion">
            <images>
                <image>explosion-1.png</image>
                <image>explosion-2.png</image>
            </images>
        </spriteTemplate>
    </spriteTemplates>
    
    <decorationTemplates>
        <decorationTemplate name="bigstar">
            <spriteTemplate src="bigstar" />
            <speed>200</speed>
            <turningSpeed>0</turningSpeed>
        </decorationTemplate>
        <decorationTemplate name="smallstar">
            <spriteTemplate src="smallstar" />
            <speed>200</speed>
            <turningSpeed>0</turningSpeed>
        </decorationTemplate>
    </decorationTemplates>
    
    <enemyTemplates>
        <enemyTemplate name="grey_enemy">
            <spriteTemplate src="grey_enemy" />
            <spriteTemplateDead src="explosion" />
            <speed>50</speed>
            <hitPoints>40</hitPoints>
        </enemyTemplate>
    </enemyTemplates>
    
    <weaponTemplates>
        <weaponTemplate name="plasma">
            <spriteTemplate src="plasma" />
            <spriteTemplateDead src="plasma_dead" />
            <reloadTime>100</reloadTime>
            <speed>400</speed>
            <damage>10</damage>
        </weaponTemplate>
    </weaponTemplates>
    
    <playerTemplate>
        <spriteTemplate src="blue_player" />
        <weaponTemplate src="plasma" />
    </playerTemplate>
    
    <levelTemplates>
        <levelTemplate name="test_level">
            <entityFactory>
                <decorationTemplate src="bigstar" />
                <avgNumPerSecond>2</avgNumPerSecond>
                <initialAngle>3.14159</initialAngle>
            </entityFactory>
            <entityFactory>
                <decorationTemplate src="smallstar" />
                <avgNumPerSecond>4</avgNumPerSecond>
                <initialAngle>3.14159</initialAngle>
            </entityFactory>
            <entityFactory>
                <enemyTemplate src="grey_enemy" />
                <avgNumPerSecond>0.7</avgNumPerSecond>
                <initialAngle>3.14159</initialAngle>
            </entityFactory>
        </levelTemplate>
    </levelTemplates>
</shipmod>

